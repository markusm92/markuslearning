<%= form_with(model: [:admin, @page]) do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :slug %><br>
    <%= form.text_field :slug %>
  </div>

  <div>
    <%= form.label :content %><br>
    <%= form.rich_text_area :content %>
  </div>

  <div>
    <%= form.label :published %>
    <%= form.check_box :published %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
