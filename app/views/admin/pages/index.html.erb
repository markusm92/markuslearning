<h1>Pages</h1>

<%= link_to "New Page", new_admin_page_path, class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Slug</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= page.slug %></td>
        <td><%= page.published? ? "Published" : "Draft" %></td>
        <td>
          <%= link_to "Edit", edit_admin_page_path(page), class: "btn btn-sm btn-secondary" %>
          <%= button_to "Delete",
                        admin_page_path(page),
                        method: :delete,
                        data: { confirm: "Are you sure?" },
                        class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
