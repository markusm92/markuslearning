<h1>All Pages</h1>

<% if @pages.present? %>
  <ul>
    <% @pages.each do |page| %>
      <li>
        <h3><%= link_to page.title, page_path(page.slug) %></h3>
        <p><%= truncate(strip_tags(page.content.body.to_s), length: 150) %></p>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No pages are available yet.</p>
<% end %>
