<div style="max-width: 800px; margin: 40px auto; padding: 20px; border: 1px solid #ddd; border-radius: 8px; background-color: #fafafa;">
  <!-- Page title -->
  <h1 style="font-size: 2em; margin-bottom: 20px; color: #333;"><%= @page.title %></h1>

  <!-- Page content -->
  <div style="line-height: 1.6; color: #555;">
    <%= @page.content %>
  </div>

  <!-- Back link -->
  <p style="margin-top: 30px;">
    <%= link_to "← Back to all pages", pages_path, style: "text-decoration: none; color: #007bff;" %>
  </p>
</div>
